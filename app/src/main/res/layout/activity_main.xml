<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.brucetoo.listvideoplay.MainActivity">

    <ImageView
        android:id="@+id/clip_image"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_listview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onListViewClick"
            android:text="LISTVIEW DEMO"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onRecyclerViewClick"
            android:text="RECYCLERVIEW DEMO"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onSmallScreenClick"
            android:text="RECYCLER SMALL SCREEN DEMO"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onSmallScreenClick1"
            android:text="LISTVIEW SMALL SCREEN DEMO"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onHighLightClick"
            android:text="LISTVIEW HIGH LIGHT DEMO"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onSpringAnimation"
            android:text="Spring animation"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onVideoSupport"
            android:text="List Video Play Surpport"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="onConstraintLayout"
            android:text="ConstraintLayout"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</FrameLayout>
